pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('AWS')   // Remove if not needed
        AWS_SECRET_ACCESS_KEY = credentials('AWS')  // Remove if not needed
    } 
    
    parameters {
        string(name: 'USERNAME', defaultValue: '', description: 'Enter the username')
        // string(name: 'USER_EMAIL', defaultValue: '', description: 'Enter the user email') // Commented out
    }
    
    stages {
        stage('Checkout') {
            steps {
                git credentialsId: 'Githubcreds', branch: 'create_users', url: 'https://github.com/devsecopsmurali/ansible-playbook-builds.git'
            }
        }

        stage('Execute Ansible playbook sdfs') {
            steps {
                ansiblePlaybook playbook: 'create_user.yml',
                    extraVars: [
                        "username=${params.USERNAME}",
                        // "useremail=${params.USER_EMAIL}", // Commented out
                    ]
            }
        }
    }
}
