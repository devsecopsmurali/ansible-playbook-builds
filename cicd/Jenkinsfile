pipeline {
    agent any

    parameters {
        string(name: 'USERNAME', defaultValue: '', description: 'Enter the username')
        string(name: 'USEREMAIL', defaultValue: '', description: 'Enter the user email')
    }

    environment {
        AWS_ACCESS_KEY_ID = credentials('AWS')
        AWS_SECRET_ACCESS_KEY = credentials('AWS')
    } 

    stages {
        stage('Checkout') {
            steps {
                git credentialsId: 'Githubcreds', branch: 'create_users', url: 'https://github.com/devsecopsmurali/ansible-playbook-builds.git'
            }
        }
        stage('Example Stage') {
            steps {
                script {
                    def username = params.USERNAME
                }
            }
        }
        stage('Execute Ansible playbook') {
            steps {
                script {
                    ansiblePlaybook(
                        playbook: 'create_user.yml',
                        inventory: 'localhost',
                        extras: "-e 'username=${params.USERNAME}' -e 'userEmail=${params.USEREMAIL}' -e 'aws_access_key_id=${AWS_ACCESS_KEY_ID}' -e 'aws_secret_access_key=${AWS_SECRET_ACCESS_KEY}'"
                    )
                }
            }
            
        }
    }

    post {
        success {
           emailext subject: 'IAM User Creation Successful',
    body: '''\
        <html>
        <body style="font-family: Arial, sans-serif;">
            <p>Your IAM user creation is successful. Congratulations!</p>
            <p><strong>User Name:</strong> ${username}</p>
            <p><strong>IAM Password:</strong> "Welcome@123456"</p>
        </body>
        </html>
    ''',
    recipientProviders: [[$class: 'CulpritsRecipientProvider']],
    to: params.USEREMAIL

        }
        failure {
            // Send email on failure
            emailext subject: 'Jenkins Build Failed',
                      body: 'Your build has failed. Please check the Jenkins logs for details.',
                      recipientProviders: [[$class: 'CulpritsRecipientProvider']],
                      to: params.USEREMAIL
        }
    }
}
